<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.neychoup.infrastructure.dao.IModuleDao">

    <resultMap id="ModuleMap" type="tech.neychoup.infrastructure.dao.po.ModulePO">
        <id column="id" property="id"/>
        <result column="skill_id" property="skillId"/>
        <result column="name" property="name"/>
        <result column="objective" property="objective"/>
        <result column="is_locked" property="isLocked"/>
        <result column="unlock_cost" property="unlockCost"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="saveModule" parameterType="tech.neychoup.infrastructure.dao.po.ModulePO" useGeneratedKeys="true" keyProperty="id">
        insert into module (skill_id,
                            name,
                            objective,
                            create_time,
                            update_time)
        values (#{skillId}, #{name}, #{objective}, now(), now())
    </insert>

    <insert id="saveModuleList" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO module (
        skill_id,
        name,
        objective,
        is_locked,
        unlock_cost,
        create_time,
        update_time
        ) VALUES
        <foreach collection="list" item="taskModule" separator=",">
            (
            #{taskModule.skillId},
            #{taskModule.name},
            #{taskModule.objective},
            #{taskModule.isLocked},
            #{taskModule.unlockCost},
            NOW(),
            NOW()
            )
        </foreach>
    </insert>

    <select id="getModuleListBySkillId" parameterType="java.lang.Long" resultMap="ModuleMap">
        select *
        from module
        where skill_id = #{skillId}
    </select>
</mapper>
